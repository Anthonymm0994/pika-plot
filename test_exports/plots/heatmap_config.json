  "styling": {
    "width": 800,
    "height": 600,
    "color_scheme": "turbo",
    "show_legend": true,
    "show_values": true,
    "interpolation": "bilinear"
  },
  "axes": {
    "x_label": "Region",
    "y_label": "Product Category",
    "value_label": "Total Sales ($)"
  }
}